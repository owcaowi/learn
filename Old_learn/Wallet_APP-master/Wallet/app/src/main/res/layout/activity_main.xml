

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:lht="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:name="android.permission.SET_DEBUG_APP"
    android:layout_height="fill_parent"
    tools:context=".MainActivity">


    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="70sp"
        android:background="@drawable/main_photo">
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <com.example.owi.wallet.fonts.OSLightTextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/balance_label"
            android:id="@+id/balance_label"
            android:layout_column="0"
            android:layout_span="0"
            android:textIsSelectable="false"
            android:paddingTop="@dimen/activity_horizontal_margin"
            android:textSize="20sp"
            style="@style/horizMarg"
            />


    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <com.example.owi.wallet.fonts.OSRegTextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/account_balance"
            android:id="@+id/account_balance"
            android:linksClickable="false"
            android:layout_column="0"
            android:textIsSelectable="true"
            android:textSize="15sp"
            style="@style/horizMarg"
            />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"></TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <com.example.owi.wallet.fonts.OSLightTextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Limit"
            android:id="@+id/limitLabel"
            android:layout_column="0"
            android:paddingTop="@dimen/activity_horizontal_margin"
            android:textSize="20sp"
            style="@style/horizMarg"
            />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"></TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <com.example.owi.wallet.fonts.OSRegTextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Limit not set yet "
            android:id="@+id/limit"
            android:layout_column="0"
            android:textSize="15sp"
            style="@style/horizMarg"
            />


    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"></TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"></TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </TableRow>


</TableLayout>

